<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_position_form" model="ir.ui.view">
        <field name="name">account.fiscal.position.form</field>
        <field name="model">account.fiscal.position</field>
        <field name="inherit_id" ref="account.view_account_position_form"/>
        <field name="arch" type="xml">
                <xpath expr="//tree[@name='tax_map_tree']/field[@name='tax_dest_id']" position="after">
                    <field name="product_type"/>
                </xpath>
                <xpath expr="//form[@name='tax_map_form']//field[@name='tax_dest_id']" position="after">
                    <field name="product_type"/>
                </xpath>

                <xpath expr="//field[@name='account_ids']/tree//field[@name='account_dest_id']" position="after">
                    <field name="product_type"/>
                </xpath>
                <xpath expr="//field[@name='account_ids']/form//field[@name='account_dest_id']" position="after">
                    <field name="product_type"/>
                </xpath>
        </field>
    </record>
</odoo>
