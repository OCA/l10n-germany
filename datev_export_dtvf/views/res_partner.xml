<odoo>

<record id="view_res_partner_form" model="ir.ui.view">
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_partner_form" />
    <field name="arch" type="xml">
        <xpath expr="//page[@name='accounting']/group" position="inside">
            <group
                    name="datev_export_dtvf"
                    attrs="{'invisible': [('l10n_de_datev_export_show', '=', False)]}"
                >
                <field name="l10n_de_datev_export_show" invisible="True" />
                <field name="l10n_de_datev_export_identifier_customer" />
                <button
                        type="object"
                        name="action_l10n_de_datev_export_identifier_customer"
                        attrs="{'invisible': [('l10n_de_datev_export_identifier_customer', '!=', False)]}"
                        class="btn btn-secondary"
                        string="Generate"
                    />
                <field name="l10n_de_datev_export_identifier_supplier" />
                <button
                        type="object"
                        name="action_l10n_de_datev_export_identifier_supplier"
                        attrs="{'invisible': [('l10n_de_datev_export_identifier_supplier', '!=', False)]}"
                        class="btn btn-secondary"
                        string="Generate"
                    />
            </group>
        </xpath>
    </field>
</record>

</odoo>
