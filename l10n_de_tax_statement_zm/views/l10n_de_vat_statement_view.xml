<odoo>

    <record id="view_l10n_de_tax_report_form" model="ir.ui.view">
        <field name="model">l10n.de.tax.statement</field>
        <field name="inherit_id" ref="l10n_de_tax_statement.view_l10n_de_tax_report_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="zm_statement" string="Zusammenfassende Meldung" attrs="{'invisible':[('state','=','draft')]}">
                    <group name="zm_lines" string="Zusammenfassende Meldung Positionen">
                        <div states="posted">Press the Update button in order to recompute the lines!</div>
                        <div class="oe_button_box" name="button_box">
                            <button name="zm_update" string="Update" states="posted" type="object" class="oe_stat_button" icon="fa-repeat"/>
                            <button name="zm_download" string="Download.CSV" states="posted" type="object" class="oe_stat_button" icon="fa-download"/>
                        </div>
                    </group>
                    <field name="zm_line_ids">
                        <tree editable="bottom" create="false" delete="false">
                            <field name="partner_id" />
                            <field name="vat" />
                            <field name="country_code" />
                            <field name="currency_id" />
                            <field name="amount_products" />
                            <field name="amount_services" />
                        </tree>
                    </field>
                    <group>
                        <group>
                        </group>
                        <group>
                            <label for="zm_total"/>
                            <field name="zm_total" nolabel="1"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
