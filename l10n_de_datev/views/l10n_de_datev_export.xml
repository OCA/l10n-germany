<odoo>

<record id="l10n_de_datev_export_view_form" model="ir.ui.view">
    <field name="model">l10n_de_datev.export</field>
    <field name="arch" type="xml">
        <form>
            <header>
                <button type="object" name="action_generate" states="draft" class="btn-primary" string="Generate" />
                <field name="state" widget="statusbar" />
            </header>
            <sheet>
                <group name="data">
                    <field name="fiscalyear_id" domain="[('type_id', '=', %(account_fiscal_year.fiscalyear)s)]" />
                    <field name="fiscalyear_start" invisible="True" />
                    <field name="fiscalyear_end" invisible="True" />
                    <field name="period_ids" domain="[('date_start', '&gt;=', fiscalyear_start), ('date_end', '&lt;=', fiscalyear_end)]" attrs="{'readonly': [('fiscalyear_id', '=', False)]}" />
                </group>
                <group name="result" states="done">
                    <field name="date_generated" />
                    <field name="file_name" invisible="True" />
                    <field name="file_data" filename="file_name" />
                </group>
            </sheet>
        </form>
    </field>
</record>

<record id="l10n_de_datev_export_view_tree" model="ir.ui.view">
    <field name="model">l10n_de_datev.export</field>
    <field name="arch" type="xml">
        <tree>
            <field name="display_name" />
            <field name="fiscalyear_id" />
            <field name="state" />
            <field name="date_generated" />
        </tree>
    </field>
</record>

<act_window
    id="action_l10n_de_datev_export"
    res_model="l10n_de_datev.export"
    name="DATEV export"
/>

<menuitem
    id="menu_l10n_de_datev_export"
    parent="account.menu_finance_reports"
    action="action_l10n_de_datev_export"
/>

</odoo>
