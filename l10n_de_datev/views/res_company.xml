<odoo>

<record id="res_company_view_form" model="ir.ui.view">
    <field name="model">res.company</field>
    <field name="inherit_id" ref="base.view_company_form" />
    <field name="arch" type="xml">
        <notebook position="inside">
            <page name="datev" string="DATEV">
                <group>
                    <field name="datev_consultant_id" required="True" />
                    <field name="datev_client_id" required="True" />
                    <field name="datev_account_code_length" required="True" />
                </group>
            </page>
        </notebook>
    </field>
</record>

</odoo>
